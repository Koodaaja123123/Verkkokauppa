<Window x:Class="VerkkokaupanTietokantarakenne.LisaaTilausWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Lisää Uusi Tilaus" Height="300" Width="400">
    <StackPanel Margin="10">
        <!-- Kentät tilauksen tiedoille -->
        <xctk:WatermarkTextBox x:Name="txtAsiakasID" Watermark="AsiakasID"/>
        <DatePicker x:Name="dpTilauspaivamaara"/>
        <xctk:WatermarkTextBox x:Name="txtToimitusosoite" Watermark="Toimitusosoite"/>
        <xctk:WatermarkTextBox x:Name="txtKokonaissumma" Watermark="Kokonaissumma"/>
        <Button Content="Lisää Tilaus" Click="LisaaTilaus_Click"/>
    </StackPanel>
</Window>
